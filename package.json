{
  "name": "feature-flag-system",
  "version": "1.0.0",
  "description": "Multi-tenant SaaS feature flag system",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:core && npm run build:sdk && npm run build:api && npm run build:cli && npm run build:admin-ui",
    "build:core": "cd packages/core && npm run build",
    "build:sdk": "cd packages/sdk && npm run build",
    "build:api": "cd packages/api && npm run build",
    "build:cli": "cd packages/cli && npm run build",
    "build:admin-ui": "cd packages/admin-ui && npm run build",
    "test": "npm run test:core && npm run test:sdk && npm run test:api && npm run test:cli",
    "test:core": "cd packages/core && npm test",
    "test:sdk": "cd packages/sdk && npm test",
    "test:api": "cd packages/api && npm test",
    "test:cli": "cd packages/cli && npm test",
    "test:core:coverage": "cd packages/core && npm run test -- --coverage",
    "test:sdk:coverage": "cd packages/sdk && npm run test -- --coverage",
    "test:api:coverage": "cd packages/api && npm run test -- --coverage",
    "test:cli:coverage": "cd packages/cli && npm run test -- --coverage",
    "test:integration": "cd tests/integration && npx vitest run",
    "test:integration:watch": "cd tests/integration && npx vitest",
    "test:smoke": "echo 'Smoke tests not implemented yet'",
    "test:benchmark": "echo 'Benchmark tests not implemented yet'",
    "test:smoke:production": "echo 'Production smoke tests not implemented yet'",
    "lint": "eslint packages/core/src/**/*.ts packages/api/src/**/*.ts packages/sdk/src/**/*.ts packages/cli/src/**/*.ts",
    "lint:fix": "eslint packages/core/src/**/*.ts packages/api/src/**/*.ts packages/sdk/src/**/*.ts packages/cli/src/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.ts",
    "format:check": "prettier --check packages/*/src/**/*.ts",
    "type-check": "npm run build",
    "setup:local": "node scripts/setup-local.js",
    "local:start": "scripts/start-local-aws.sh",
    "local:stop": "scripts/stop-local-aws.sh",
    "setup:test-db": "echo 'Test DB setup not implemented yet'",
    "deploy:dev": "cd infrastructure && npm run deploy:dev",
    "deploy:prod": "cd infrastructure && npm run deploy:prod",
    "poc:performance": "cd poc && npx tsx day1-performance-test.ts",
    "monitor:health": "echo 'Health monitoring not implemented yet'"
  },
  "keywords": [
    "feature-flag",
    "feature-toggle",
    "aws",
    "lambda",
    "dynamodb",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.0.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "husky": "^9.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.451.0",
    "@aws-sdk/lib-dynamodb": "^3.451.0",
    "aws-sdk": "^2.1500.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
